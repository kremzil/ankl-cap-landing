---
import Layout from '../layouts/Layout.astro';

const companyCards = [
	{
		id: 'shark',
		title: 'Shark',
		subtitle: 'Retail & Innovation',
		description: 'Retailová jednotka skupiny – pilotné projekty, experimenty a pop-up riešenia.',
		details:
			'Shark realizuje rôzne projekty a zastrešuje viaceré značky v rámci skupiny ANKL Cap, vrátane retailových rolloutov po celom Slovensku.',
		tags: ['Retail', 'Experimenty', 'Pop-up'],
		services: ['Retail rollouts a výklady', 'Eventové a promo inštalácie', 'Pilotné projekty pre nové značky'],
		links: [
			{ label: 'www.shark.sk', href: 'https://www.shark.sk' }],
		colors: {
			card: 'bg-white text-gray-900',
			accent: 'bg-gray-900 text-white',
			chip: 'text-gray-600'
		}
	},
	{
		id: 'kpk',
		title: 'KPK Reklama',
		subtitle: 'Full-service advertising',
		description: 'Komplexná produkcia od veľkoformátovej tlače po digitál, aktívna v celej strednej Európe.',
		details:
			'KPK zabezpečuje tlač, polepy, LED riešenia aj digitálne kampane pre retail a firemných klientov na Slovensku a v zahraničí.',
		tags: ['Tlač', 'LED', 'Digitál'],
		services: ['Tlač a produkcia POSM', 'LED boxy a svetelné inštalácie', 'Digitálne kampane'],
		links: [
			{ label: 'www.kpkprint.sk', href: 'https://www.kpkprint.sk' }],
		colors: {
			card: 'bg-[#f1e9db] text-[#3e2b1d]',
			accent: 'bg-[#3e2b1d] text-white',
			chip: 'text-[#6d5740]'
		}
	},
	{
		id: 'razdva',
		title: 'Razdva',
		subtitle: 'Solutions & Development',
		description: 'Technologické štúdio, ktoré dodáva softvér a podporu pre projekty skupiny aj externých partnerov.',
		details:
			'Razdva sa sústreďuje na webové aplikácie, interné nástroje, automatyzáciu workflow a dlhodobú podporu klientov.',
		tags: ['Software', 'Support', 'Automation'],
		services: ['Vývoj webových aplikácií', 'Automatizácia procesov', 'Prevádzka a podpora'],
		links: [{ label: 'www.razdva.solutions', href: 'https://www.razdva.solutions' }],
		colors: {
			card: 'bg-white text-gray-900',
			accent: 'bg-gray-900 text-white',
			chip: 'text-gray-600'
		}
	}
];


---
<Layout title="ANKL cap | Angel Investor & Private Equity">
    <!-- BACKGROUND STARS GENERATOR -->
    <div class="stars-bg" x-data x-init="(() => {
        for (let i = 0; i < 100; i++) {
            const s = document.createElement('div');
            s.className = 'star';
            s.style.left = Math.random() * 100 + '%';
            s.style.top = Math.random() * 100 + '%';
            s.style.animationDelay = Math.random() * 5 + 's';
            $el.appendChild(s);
        }
    })()"></div>


    <!-- SMART NAVBAR -->
<!-- HTML часть -->
<nav x-data="navbar" 
     class="fixed top-0 w-full z-50 transition-transform duration-500 border-b border-white/10 bg-black/80 backdrop-blur-md"
     :class="visible ? 'translate-y-0' : '-translate-y-full'">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            
            <!-- Logo -->
            <div class="flex-shrink-0">
                <a href="#" class="group text-2xl font-bold text-white tracking-widest border border-white/20 px-3 py-1 uppercase transition hover:border-white/50">
                    ANKL<span class="text-gray-400 group-hover:text-white transition-colors">cap</span>
                </a>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-8">
                    <template x-for="item in navigation" :key="item.label">
                        <a 
                            :href="item.href"
                            x-text="item.label"
                            class="transition duration-300 text-sm font-medium"
                            :class="item.isCta 
                                ? 'px-4 py-2 border border-gray-400 text-gray-300 hover:bg-gray-100 hover:text-black' 
                                : 'text-gray-400 hover:text-white px-3 py-2'"
                        ></a>
                    </template>
                </div>
            </div>

            <!-- Mobile Burger Button -->
            <div class="-mr-2 flex md:hidden">
                <button @click="toggleMenu()" 
                        type="button"
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                        aria-controls="mobile-menu" 
                        :aria-expanded="mobileMenu"
                >
                    <span class="sr-only">Open main menu</span>
                    <!-- Icon: Menu -->
                    <svg class="h-6 w-6 transition-transform duration-300" 
                         :class="mobileMenu ? 'rotate-90 opacity-0 absolute' : 'opacity-100'"
                         fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <!-- Icon: X -->
                    <svg class="h-6 w-6 transition-transform duration-300"
                         :class="mobileMenu ? 'opacity-100' : '-rotate-90 opacity-0 absolute'"
                         fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div x-show="mobileMenu"
         x-collapse 
         class="md:hidden bg-black border-t border-gray-800"
         id="mobile-menu"
    >
        <div class="px-2 pt-2 pb-3 space-y-1 text-center">
            <template x-for="item in navigation" :key="item.label">
                <a @click="closeMenu()" 
                   :href="item.href" 
                   x-text="item.label"
                   class="block px-3 py-3 text-base font-medium transition-colors"
                   :class="item.isCta 
                        ? 'bg-white text-black mx-4 rounded mt-4 hover:bg-gray-200' 
                        : 'text-gray-300 hover:text-white hover:bg-gray-900'"
                ></a>
            </template>
        </div>
    </div>
</nav>

<script is:inline>
    document.addEventListener('alpine:init', () => {
        Alpine.data('navbar', () => ({
            visible: true,
            lastScroll: 0,
            mobileMenu: false,
            
            navigation: [
                { label: 'Vývoj',    href: '#about' },
                { label: 'Firmy',    href: '#firmy' },
                { label: 'Projekty', href: '#projekty' },
                { label: 'Bio',      href: '#bio' },
                { label: 'Kontakt',  href: '#kontakt', isCta: true }
            ],

            init() {
                this.lastScroll = window.scrollY;
                
                window.addEventListener('scroll', () => {
                    const currentScroll = window.scrollY;
                    
                    // ИСПРАВЛЕНИЕ ЗДЕСЬ:
                    // Вместо (currentScroll <= 0), используем проверку на 0
                    if (currentScroll === 0) {
                        this.visible = true;
                    } else {
                        if (Math.abs(currentScroll - this.lastScroll) > 10) {
                            // ИСПРАВЛЕНИЕ ЗДЕСЬ:
                            // Используем '>', меняя переменные местами, чтобы избежать ошибки парсера
                            this.visible = this.lastScroll > currentScroll;
                        }
                    }
                    this.lastScroll = currentScroll;
                }, { passive: true });
            },

            toggleMenu() {
                this.mobileMenu = !this.mobileMenu;
                document.body.style.overflow = this.mobileMenu ? 'hidden' : '';
            },
            
            closeMenu() {
                this.mobileMenu = false;
                document.body.style.overflow = '';
            }
        }));
    });
</script>

    <!-- HERO SECTION -->
    <section class="relative h-screen flex flex-col items-center justify-center text-center px-4 overflow-hidden">
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-slate-700 rounded-full mix-blend-screen filter blur-[100px] opacity-20 animate-pulse-slow"></div>

        <div class="relative z-10" x-data="{ show: false }" x-init="setTimeout(() => show = true, 500)">
            <h1 class="text-6xl md:text-8xl font-black tracking-tighter mb-4 opacity-0 transition-opacity duration-1000"
                :class="show ? 'opacity-100' : 'opacity-0'">
                <span class="animate-pulse text-silver-gradient">ANKL cap</span>
            </h1>
            <div class="h-px w-24 bg-gradient-to-r from-transparent via-gray-400 to-transparent mx-auto mb-6"></div>
            <p class="text-xl md:text-2xl text-gray-400 font-light tracking-widest uppercase opacity-0 transform translate-y-4 transition-all duration-1000 delay-500"
               :class="show ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-4'">
                Angel Investor. <span class="text-white font-semibold">Private Equity.</span>
            </p>
        </div>

        <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce text-gray-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7-7-7"></path></svg>
        </div>
    </section>

    <!-- TIMELINE SECTION -->
<section id="about" class="relative bg-gray-900 text-white" x-data="timeline">
    <!-- Контейнер: На мобилках колонка, на десктопе ряд -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 md:flex md:justify-between">

        <!-- ЛЕВАЯ КОЛОНКА (ЗАЛИПАЮЩАЯ) -->
        <!-- md:w-5/12 - ширина чуть меньше половины -->
        <!-- md:sticky md:top-0 md:h-screen - делает блок фиксированным на десктопе -->
        <div class="md:w-5/12 md:sticky md:top-0 md:h-screen flex flex-col justify-center py-12 md:py-0 z-10">
            <div class="space-y-6">
                <h2 class="text-3xl md:text-5xl font-bold text-silver-gradient leading-tight">
                    Ako sme sa <br> vyvíjali
                </h2>
                
                <!-- Динамический год (показываем текущий активный) -->
                <!-- transition-key помогает анимировать смену цифр -->
                <div class="hidden md:block">
                    <span class="text-[8rem] font-bold text-gray-400 leading-none transition-all duration-500 select-none block"
                          style="text-shadow: 0 0 2px rgba(255,255,255,0.1);"
                          x-text="activeYear"
                          x-key="activeIndex"
                    ></span>
                </div>
                
                <p class="text-gray-400 text-lg md:max-w-sm">
                    Prejdite si našu históriu rok po roku a pozrite sa, ako sme rástli.
                </p>
            </div>
        </div>

        <!-- ПРАВАЯ КОЛОНКА (СКРОЛЛ) -->
        <!-- md:w-6/12 - правая часть -->
        <div class="md:w-6/12 py-12 md:py-24">
            <div class="relative border-l border-gray-800 ml-4 md:ml-0 space-y-20 md:space-y-32 pb-24">
                
                <template x-for="(item, index) in items" :key="item.year">
                    <div 
                        x-data="{ shown: false }" 
                        x-intersect.threshold.0.5="shown = true"
                        x-intersect.margin.-45%.0px.-45%.0px="activeIndex = index"
                        class="relative pl-12 transition-all duration-700"
                        :class="shown ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-10'"
                    >
                        <!-- Точка -->
                        <div
                            class="absolute left-[-5px] top-2 w-3 h-3 rounded-full transition-all duration-500 border border-gray-700"
                            :class="activeIndex === index ? styles.dot.active : styles.dot.inactive"
                        ></div>

                        <!-- Год (виден только на мобильных, т.к. на десктопе он слева) -->
                        <span class="md:hidden text-2xl font-bold text-white block mb-2" x-text="item.year"></span>

                        <!-- Текст -->
                        <div
                            class="transition-all duration-500 transform"
                            :class="activeIndex === index ? styles.text.active : styles.text.inactive"
                        >
                            <p class="text-xl md:text-2xl font-light leading-relaxed" x-text="item.text"></p>
                        </div>
                    </div>
                </template>

            </div>
        </div>

    </div>
</section>


    <!-- FIRMY DETAIL (Overlay Slider) -->
    <section id="firmy" class="py-24 bg-black border-t border-gray-900">
        <div class="max-w-7xl mx-auto px-4">
            <div class="text-center mb-14">
                <p class="uppercase tracking-[0.3em] text-sm text-gray-500">Interaktívny prehľad</p>
                <h2 class="text-3xl md:text-4xl font-bold text-white mt-4">Firmy v skupine — detail</h2>
                <p class="text-gray-400 mt-4 max-w-3xl mx-auto">
                    Vyberte si kartu spolo&ccaron;nosti. Po kliknutí sa otvorí detail so zvýraznenou kartou uprostred
                    a dvomi náhľadmi pre rýchlu navigáciu.
                </p>
            </div>

            <div class="grid gap-6 md:grid-cols-3" data-company-grid>
                {companyCards.map((company, index) => (
                    <button
                        type="button"
                        class={`group relative rounded-3xl border border-white/10 p-6 text-left transition hover:-translate-y-1 hover:border-white/20 focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40 ${company.colors.card}`}
                        data-company-trigger={index}
                    >
                        <div class="text-xs uppercase tracking-[0.4em] opacity-60 mb-4">{company.subtitle}</div>
                        <h3 class="text-2xl font-bold mb-4">{company.title}</h3>
                        <p class="text-sm opacity-80">{company.description}</p>
                        <div class="mt-6 flex items-center gap-3">
                            <span class={`inline-flex h-10 w-10 items-center justify-center rounded-full text-xs font-semibold ${company.colors.accent}`}>GO</span>
                            <span class="text-xs font-semibold tracking-[0.3em] uppercase">Pozrieť detail</span>
                        </div>
                    </button>
                ))}
            </div>
        </div>

        <div class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/70 px-4 py-8 backdrop-blur" data-company-overlay>
            <div class="relative w-full max-w-5xl">
                <button
                    type="button"
                    class="absolute right-4 top-4 inline-flex h-10 w-10 items-center justify-center rounded-full bg-white/10 text-white hover:bg-white/20 focus:outline-none focus-visible:ring-2 focus-visible:ring-white/60 z-50"
                    data-company-close
                    aria-label="Zavrieť detail"
                >
                    ×
                </button>

                <div class="md:hidden relative min-h-[560px]">
                    {companyCards.map((company, index) => (
                        <div
                            class:list={[
                                'absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none transform scale-95 transition-all duration-300 ease-out',
                                index === 0 && 'opacity-100 pointer-events-auto scale-100'
                            ]}
                            data-company-mobile-slide
                            data-company-index={index}
                        >
                            <div class="relative mx-auto w-full max-w-3xl rounded-[30px] border border-white/10 bg-gradient-to-b from-gray-950 to-gray-900 shadow-2xl overflow-hidden">
                                <div class="p-8 md:p-10 space-y-6">
                                    <div class="flex flex-col gap-4">
                                        <div class="flex flex-wrap items-center gap-3">
                                            <span class="inline-flex h-12 w-12 items-center justify-center rounded-2xl border border-white/10 text-lg font-bold">{company.title.slice(0, 2)}</span>
                                            <div>
                                                <p class="text-sm uppercase tracking-[0.4em] text-gray-400">{company.subtitle}</p>
                                                <h3 class="text-3xl font-semibold text-white">{company.title}</h3>
                                            </div>
                                        </div>
                                        <p class="text-gray-300 leading-relaxed">{company.details}</p>
                                        {company.tags?.length ? (
                                            <div class="flex flex-wrap gap-2">
                                                {company.tags.map((tag) => (
                                                    <span class={`rounded-full border border-white/10 px-3 py-1 text-xs font-medium uppercase tracking-[0.2em] ${company.colors.chip}`}>
                                                        {tag}
                                                    </span>
                                                ))}
                                            </div>
                                        ) : null}
                                    </div>

                                    <div class="grid gap-6 md:grid-cols-2">
                                        <div>
                                            <p class="text-xs uppercase tracking-[0.3em] text-gray-500 mb-3">Služby</p>
                                            <ul class="space-y-2 text-sm text-gray-300">
                                                {company.services.map((item) => (
                                                    <li class="flex items-start gap-2">
                                                        <span class="mt-1 h-1.5 w-1.5 rounded-full bg-white/70"></span>
                                                        <span>{item}</span>
                                                    </li>
                                                ))}
                                            </ul>
                                        </div>
                                        <div>
                                            <p class="text-xs uppercase tracking-[0.3em] text-gray-500 mb-3">Linky</p>
                                            <ul class="space-y-2 text-sm text-gray-300">
                                                {company.links.map((link) => (
                                                    <li>
                                                        <a
                                                            href={link.href}
                                                            target="_blank"
                                                            rel="noopener noreferrer"
                                                            class="inline-flex items-center gap-2 text-sky-300 hover:text-white transition"
                                                        >
                                                            {link.label}
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 7l-10 10m0-6v6h6" />
                                                            </svg>
                                                        </a>
                                                    </li>
                                                ))}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>

                <div class="hidden md:block">
                    <div class="relative h-[520px] perspective-1000">
                        {companyCards.map((company, index) => (
                            <div
                                class="company-overlay-slide cursor-pointer"
                                data-company-desktop-slide
                                data-company-index={index}
                            >
                                <div class="h-full w-full rounded-[32px] border border-white/10 bg-gradient-to-b from-gray-950 to-gray-900 shadow-2xl overflow-hidden flex flex-col">
                                    <div class="p-10 space-y-6 flex-1 flex flex-col">
                                        <div class="flex items-start gap-4">
                                            <div class="h-12 w-12 rounded-2xl border border-white/20 flex items-center justify-center font-semibold text-white text-lg">
                                                {company.title.slice(0, 2)}
                                            </div>
                                            <div>
                                                <p class="text-xs uppercase tracking-[0.5em] text-gray-500">{company.subtitle}</p>
                                                <h3 class="text-3xl font-bold text-white">{company.title}</h3>
                                            </div>
                                        </div>
                                        <p class="text-gray-300 text-sm leading-relaxed">
                                            {company.details}
                                        </p>
                                        {company.tags?.length ? (
                                            <div class="flex flex-wrap gap-2">
                                                {company.tags.map((tag) => (
                                                    <span class={`rounded-full border border-white/10 px-3 py-1 text-xs font-medium uppercase tracking-[0.2em] ${company.colors.chip}`}>
                                                        {tag}
                                                    </span>
                                                ))}
                                            </div>
                                        ) : null}
                                        <div class="mt-auto grid grid-cols-2 gap-4 text-sm text-gray-200">
                                            <div>
                                                <p class="text-[0.6rem] uppercase tracking-[0.5em] text-gray-500 mb-2">Služby</p>
                                                <ul class="space-y-1">
                                                    {company.services.map((item) => (
                                                        <li class="flex items-start gap-1">
                                                            <span class="mt-1 h-1.5 w-1.5 rounded-full bg-white/70"></span>
                                                            <span>{item}</span>
                                                        </li>
                                                    ))}
                                                </ul>
                                            </div>
                                            <div>
                                                <p class="text-[0.6rem] uppercase tracking-[0.5em] text-gray-500 mb-2">Linky</p>
                                                <ul class="space-y-1">
                                                    {company.links.map((link) => (
                                                        <li>
                                                            <a
                                                                href={link.href}
                                                                target="_blank"
                                                                rel="noopener noreferrer"
                                                                class="inline-flex items-center gap-2 text-sky-300 hover:text-white transition"
                                                            >
                                                                {link.label}
                                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 7l-10 10m0-6v6h6" />
                                                                </svg>
                                                            </a>
                                                        </li>
                                                    ))}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div x-data="{ 
        links: [
            'www.printexpert.sk', 'www.inzero.sk', 'www.shark.sk',
            'www.moodbooster.sk', 'www.j4ff.sk', 'www.ticketke.sk',
            'www.pkosice.sk', 'www.hypotekarnyexpert.sk', 'www.akobytmilionar.sk',
            'www.obmi.cz', 'www.obmi.institute', 'www.kpkprint.sk',
            'www.kpkprint.hu', 'www.kpkprint.de', 'www.ledbox.sk',
            'www.safetyfloor.sk', 'www.kreativnetapety.sk', 'www.razdva.solutions'
        ] 
    }">
    <section id="projekty" class="py-20 relative bg-gradient-to-b from-black to-[#0a0a0a]">
        <div class="max-w-6xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12 text-gray-200">Naše projekty</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <template x-for="link in links" :key="link">
                    <a :href="'https://' + link" target="_blank" 
                       class="group flex items-center justify-between p-4 bg-[#111] border border-gray-800 rounded-lg hover:border-gray-500 hover:bg-[#1a1a1a] transition-all duration-300">
                        <span class="text-gray-400 group-hover:text-white font-mono text-sm" x-text="link"></span>
                        <svg class="w-4 h-4 text-gray-600 group-hover:text-white transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                    </a>
                </template>
            </div>
        </div>
    </section>

    </div>

    <!-- BIO SECTION -->
    <section id="bio" class="py-24 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-black opacity-50"></div>
        <div class="max-w-5xl mx-auto px-4 relative z-10">
            <div class="flex flex-col md:flex-row items-center gap-12">
                <div class="w-64 h-64 md:w-80 md:h-80 shrink-0 relative">
                    <div class="absolute inset-0 border-2 border-gray-700 transform rotate-6"></div>
